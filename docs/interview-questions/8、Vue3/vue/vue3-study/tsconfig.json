{
  "compilerOptions": {
    "outDir": "dist", // 输出目录
    "sourceMap": true, // 生成sourcemap
    "target": "ES2016", // 目标语法
    "module": "ESNext", // 模块格式
    "moduleResolution": "Node", // 模块解析格式
    "strict": false, // 严格模式
    "resolveJsonModule": true, // 解析json模块
    "esModuleInterop": true, // 允许通过es6语法引入commonjs模块
    "jsx": "preserve", // jsx不转义
    "lib": ["ESNext", "DOM"], // 支持的类库esnext和dom
    "baseUrl": ".", // 以当前目录为基础
    "paths": {
      "@vue/*": ["packages/*/src"] // 当import @vue/ 时找到src
    }
  }
}
